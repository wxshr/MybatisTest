<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pojo.IdCard">
    <select id="findCardById" parameterType="int" resultType="pojo.IdCard">
        SELECT * FROM idcard WHERE id=#{id}
    </select>

    <insert id="insertIdCard" parameterType="pojo.IdCard">
        INSERT INTO idcard (id, money)
        VALUES (#{id}, #{money})
    </insert>

    <update id="updateIdCard" parameterType="pojo.IdCard">
        UPDATE idcard
        SET money=#{money}
        WHERE id=#{id}
    </update>

    <delete id="deleteIdCard" parameterType="int">
        DELETE FROM idcard WHERE id=#{id}
    </delete>
</mapper>
