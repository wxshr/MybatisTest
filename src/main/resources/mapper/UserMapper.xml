    <select id="findUsersByIdAndQqEmail" parameterType="map" resultType="pojo.User">
        SELECT id, username, email, phone FROM user
        WHERE id LIKE CONCAT('%', #{id}, '%')
          AND email LIKE '%@qq.com'
    </select>


    <select id="findUserByMap" parameterType="map" resultType="pojo.User">
        SELECT id, username, email, phone FROM user
        <where>
