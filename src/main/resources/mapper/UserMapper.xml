<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pojo.UserMapper">

    <select id="findUserById" parameterType="int" resultType="pojo.User">
        SELECT id, username, email, phone FROM user WHERE id = #{id}
    </select>

    <select id="findUsersByTags" parameterType="map" resultType="pojo.User">
        SELECT id, username, email, phone FROM user
        <where>
            <if test="username != null">
                AND username = #{username}
            </if>
            <if test="email != null">
                AND email = #{email}
            </if>
            <if test="phone != null">
                AND phone = #{phone}
            </if>
            <if test="ids != null and ids.size > 0">
                AND id IN
                <foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
        </where>
    </select>

    <select id="searchUsers" parameterType="map" resultType="pojo.User">
        SELECT id, username, email, phone FROM user
        <where>
            <choose>
                <when test="username != null">
                    username = #{username}
                </when>
                <when test="email != null">
                    email = #{email}
                </when>
                <when test="phone != null">
                    phone = #{phone}
                </when>
            </choose>
        </where>
    </select>

