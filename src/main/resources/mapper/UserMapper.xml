    <update id="updateUser" parameterType="pojo.User">
        UPDATE user
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="phone != null">
                phone = #{phone}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        DELETE FROM user WHERE id = #{id}
    </delete>

    <insert id="insertUser" parameterType="pojo.User">
        INSERT INTO user (username, email, phone)
        VALUES (#{username}, #{email}, #{phone})
    </insert>

    <insert id="insertUsers" parameterType="list">
        INSERT INTO user (username, email, phone)
        VALUES
        <foreach item="user" index="index" collection="list" separator=",">
            (#{user.username}, #{user.email}, #{user.phone})
        </foreach>
    </insert>

    <select id="findUsersWithPagination" parameterType="map" resultType="pojo.User">
        SELECT id, username, email, phone FROM user
                                                   LIMIT #{offset}, #{limit}
    </select>

